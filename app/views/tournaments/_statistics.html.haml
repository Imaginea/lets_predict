.modal-backdrop.in
#statisticsModal.modal{:role => "dialog", :tabindex => "-1", "aria-hidden"=>"true"}
  .modal-header
    %button.close-button.close{:type => "button", "data-dismiss" => "modal", "aria-hidden" => "true"}x
    %h3= tournament.name
    .legends{:style => 'margin-top:5px;'}
      %b Legends:
      %span#correct{:style => 'margin-left:10px;'} Correct Prediction
      %span#wrong{:style => 'margin-left:10px;'} Wrong Prediction
      %span#unknown{:style => 'margin-left:10px;'} Prediction Result Unknown
  .modal-body
    %table.table.table-bordered.table-striped#match
      %thead
        %tr
          %th Match #
          %th Date
          %th Venue
          %th Team
          %th Opponent
          %th Points
      %tbody
        - matches = @user.id == current_user.id ? tournament.matches : tournament.matches.past
        - matches.includes(:team, :opponent).each_with_index do |m, i|
          - predicted_team_id = @predicted_teams[m.id].try(:first)
          - team, opponent = m.try(:team), m.try(:opponent)
          %tr
            %td= i + 1
            %td= m.date.label
            %td= m.venue
            %td{:style => "color:#{prediction_status_color(predicted_team_id, team, m.winner_id)}"}
              = team.try(:name)
            %td{:style => "color:#{prediction_status_color(predicted_team_id, opponent, m.winner_id)}"}
              = opponent.try(:name)
            %td= predicted_team_id ? (m.winner_id ? @predicted_teams[m.id].try(:third) : '-') : 'N/A'
  .modal-footer
