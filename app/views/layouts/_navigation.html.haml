%h2.pull-left
  %a{:href => "/home", :style => "text-decoration:none;"} LET'S PREDICT
  %span{:style => 'font-size:14px;'} PRAMATI FANTASY LEAGUE
  /=image_tag('predict_sm.xcf')
.pull-right{:style => "padding-top:20px; font-size:16px;"}
  %span{:style => 'font-size:18px;'}= current_user.fullname + " | "
  %a{:href => '#how_it_works', 'data-toggle' => 'modal', :style => ''} Help
  %span{:style => 'font-size:18px;'}= "|"
  = link_to 'Sign Out', signout_path
%div{:style => 'clear:both;'}

#how_it_works.modal.hide{:style=> 'width:600px;color:#000;'}
  .modal-header
    %button.close-button.close{:type => "button", "data-dismiss" => "modal", "aria-hidden" => "true"}x
    %h3 How it works
  .modal-body
    = render '/sessions/how_it_works'
  .modal-footer
