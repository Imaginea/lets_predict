#logo-inner=link_to image_tag('logo_small.png'), home_path
.pull-right#nav-pull-right
  %span{:style => 'font-size:17;color:#b4c0cb;vertical-align:middle'}
    = current_user.fullname.upcase 
  %a.help{:href => '#how_it_works', 'data-toggle' => 'modal'}
    =image_tag('help.png', :id => 'help-image')
  %a.signout{:href => signout_path } 
    =image_tag('signout.png', :id => 'signout-image')
%div{:style => 'clear:both;'}

#how_it_works.modal.hide
  .modal-header
    %button.close-button.close{:type => "button", "data-dismiss" => "modal", "aria-hidden" => "true"}x
    %h3 How it works
  .modal-body
    = render '/sessions/how_it_works'
  .modal-footer
